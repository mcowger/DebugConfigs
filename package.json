{
  "name": "debugconfigs",
  "displayName": "DebugConfigs",
  "description": "Complex Debug Configs Made Easy",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "debug": [
        {
          "id": "debugConfigs",
          "name": "Debug Configurations",
          "icon": "$(gear)"
        }
      ]
    },
    "commands": [
      {
        "command": "debugConfigs.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "debugConfigs.addRootItem",
        "title": "Add Root Item",
        "icon": "$(add)"
      },
      {
        "command": "debugConfigs.clearTree",
        "title": "Clear Tree",
        "icon": "$(clear-all)"
      },
      {
        "command": "debugConfigs.addChild",
        "title": "Add Child"
      },
      {
        "command": "debugConfigs.removeItem",
        "title": "Remove Item"
      },
      {
        "command": "debugConfigs.setValue",
        "title": "Set Value"
      },
      {
        "command": "extension.debugconfigs.replace",
        "title": "Debug Config Variable Substitution"
      },
      {
        "command": "debugConfigs.exportTree",
        "title": "Export Tree as JSON",
        "icon": "$(save)"
      },
      {
        "command": "debugConfigs.importTree",
        "title": "Import Tree from JSON",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "debugConfigs.refresh",
          "when": "view == debugConfigs",
          "group": "navigation"
        },
        {
          "command": "debugConfigs.addRootItem",
          "when": "view == debugConfigs",
          "group": "navigation"
        },
        {
          "command": "debugConfigs.clearTree",
          "when": "view == debugConfigs",
          "group": "navigation"
        },
        {
          "command": "debugConfigs.exportTree",
          "when": "view == debugConfigs",
          "group": "navigation"
        },
        {
          "command": "debugConfigs.importTree",
          "when": "view == debugConfigs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "debugConfigs.addChild",
          "when": "view == debugConfigs && viewItem == parent",
          "group": "1_add"
        },
        {
          "command": "debugConfigs.setValue",
          "when": "view == debugConfigs && (viewItem == leaf || viewItem == parent)",
          "group": "2_edit"
        },
        {
          "command": "debugConfigs.removeItem",
          "when": "view == debugConfigs",
          "group": "3_remove"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}